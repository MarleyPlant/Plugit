{
  "name": "Plugit",
  "description": "Plugit Discord Bot",
  "logo": "https://i.imgur.com/ltCv7rbr.png",
  "repository": "https://github.com/MarleyPlant/plugit",
  "keywords": ["discord", "nodejs", "discord-bot"],
  "env": {
    "token": {
      "description": "Discord API Token",
      "required": true
    },
    "prefix": {
      "description": "Command prefix",
      "value": "!",
      "required": true
    },
    "debug": {
      "description": "Enable or disable debug mode",
      "value": false,
      "required": false
    }
  },

  "addons": ["heroku-postgresql:hobby-dev"]
}
