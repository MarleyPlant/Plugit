extends layout

block content
  main#dashboard
    include includes/navbar
    #content.content.container-fluid
        each server, i in servers
                .server.card
                    .card-body
                        img.card-img(src=server.icon)
                        br
                        h2.card-title= server.name
                        p.card-text Total Members: 
                            b= server.memberCount
                        a(href='/server/' + server.discord_ID).card-link
                            button.btn.btn-primary 
                                i.fas.fa-cogs
                                span   Settings
            

    .add-server
        a(href='https://discord.com/oauth2/authorize?client_id=355715029296742403&scope=bot&permissions=8')
            button.btn.btn-primary.btn-lg 
                i.fas.fa-plus
